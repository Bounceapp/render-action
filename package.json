{
  "name": "render-action",
  "version": "0.6.0",
  "private": true,
  "description": "TypeScript template action",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "all": "npm run build && npm run format && npm run package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bounceapp/render-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "render"
  ],
  "author": "Guilherme Duarte",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.10.0",
    "@actions/github": "^5.1.1",
    "@actions/http-client": "^2.1.1"
  },
  "devDependencies": {
    "@octokit/webhooks-types": "^7.3.1",
    "@types/node": "^20.5.9",
    "@vercel/ncc": "^0.38.1",
    "js-yaml": "^4.1.0",
    "prettier": "3.2.2",
    "typescript": "^5.2.2"
  }
}
