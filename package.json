{
  "name": "render-action",
  "version": "0.2.1",
  "private": true,
  "description": "TypeScript template action",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts",
    "format-check": "prettier --check **/*.ts",
    "lint": "eslint src/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run generate && npm run build && npm run format && npm run lint && npm run package",
    "generate": "graphql-codegen --config codegen.yml"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bounceapp/render-action.git"
  },
  "keywords": [
    "actions",
    "node",
    "render"
  ],
  "author": "Guilherme Duarte",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "^1.2.7",
    "@actions/github": "^4.0.0",
    "graphql": "^15.5.0"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.21.3",
    "@graphql-codegen/typescript": "1.21.1",
    "@graphql-codegen/typescript-graphql-request": "^4.0.0",
    "@graphql-codegen/typescript-operations": "1.17.15",
    "@octokit/webhooks-definitions": "^3.67.3",
    "@types/jest": "^26.0.23",
    "@types/node": "^14.14.41",
    "@typescript-eslint/parser": "^4.24.0",
    "@vercel/ncc": "^0.25.1",
    "eslint": "^7.24.0",
    "eslint-plugin-github": "^4.1.1",
    "eslint-plugin-jest": "^24.1.3",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "js-yaml": "^3.14.0",
    "prettier": "2.2.1",
    "ts-jest": "^26.4.4",
    "typescript": "^4.2.4"
  }
}
